{
  "editor.fontSize": 16,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.rulers": [80],
  "editor.wordWrapColumn": 80,
  "files.exclude": {
    "_build": true,
    ".elixir_ls": true,
    "**/node_modules": true,
    "deps": true,
    ".vscode": true
  },
  "sasslint.enable": true,
  "workbench.colorTheme": "dark+(elixir)"
}